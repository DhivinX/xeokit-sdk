{
  "compilerOptions": {
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "skipLibCheck": true, // https://stackoverflow.com/questions/66956030/apache-arrow-does-not-compile-with-typescript
    "target": "esnext",
    "module": "esnext",
    "stripInternal": false,
    "typeRoots": ["node_modules/@types"],
    "alwaysStrict": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": false,
    "noImplicitThis": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": "./packages",
    "build": true,
    "declarationMap": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "paths": {
      "@xeokit/basictypes":["./packages/basictypes/"],
      "@xeokit/bundle":["./packages/bundle/"],
      "@xeokit/bcf":["./packages/bcf/"],
      "@xeokit/boundaries":["./packages/boundaries/"],
      "@xeokit/cameracontrol":["./packages/cameracontrol/"],
      "@xeokit/cityjsontypes_1_1_3":["./packages/cityjsontypes_1_1_3/"],
      "@xeokit/compression":["./packages/compression/"],
      "@xeokit/constants":["./packages/constants/"],
      "@xeokit/core":["./packages/core/"],
      "@xeokit/curves":["./packages/curves/"],
      "@xeokit/data":["./packages/data/"],
      "@xeokit/dotbim":["./packages/dotbim/"],
      "@xeokit/gltf":["./packages/gltf/"],
      "@xeokit/ifctypes":["./packages/ifctypes/"],
      "@xeokit/kdtree2":["./packages/kdtree2/"],
      "@xeokit/kdtree3":["./packages/kdtree3/"],
      "@xeokit/ktx2":["./packages/ktx2/"],
      "@xeokit/las":["./packages/las/"],
      "@xeokit/locale":["./packages/locale/"],
      "@xeokit/math":["./packages/math/"],
      "@xeokit/matrix":["./packages/matrix/"],
      "@xeokit/pick":["./packages/pick/"],
      "@xeokit/procgen":["./packages/procgen/"],
      "@xeokit/rtc":["./packages/rtc/"],
      "@xeokit/scene":["./packages/scene/"],
      "@xeokit/testutils":["./packages/testutils/"],
      "@xeokit/threedxml":["./packages/threedxml/"],
      "@xeokit/treeview":["./packages/treeview/"],
      "@xeokit/utils":["./packages/utils/"],
      "@xeokit/viewer":["./packages/viewer/"],
      "@xeokit/webglrenderer":["./packages/webglrenderer/"],
      "@xeokit/webglutils":["./packages/webglutils/"],
      "@xeokit/webifc":["./packages/webifc/"],
      "@xeokit/dtx":["./packages/dtx/"],
      "@xeokit/gltf2dtx":["./packages/gltf2dtx/"],
      "@xeokit/las2dtx":["./packages/las2dtx/"],
      "@xeokit/cityjson":["./packages/cityjson/"]
    }
  },
  "include": [
    "packages/*/src/**/*.ts",
    "docs/*.ts" // Included to allow TypeDoc to find `pages.ts` content.
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "typeRoots": ["node_modules/@types"],


}